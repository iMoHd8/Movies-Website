@model WebApplication1.Models.Member

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center" style="margin:20px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Delete User</h2>

<hr />
<h3 class="text-center text-danger" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Are You Sure You Want To Delete This User?</h3>

<section style="display: flex; justify-content: center; margin: 2%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayName("ID: ")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.userId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("User Name: ")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Password: ")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("E-Mail: ")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.email)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>

</section>
