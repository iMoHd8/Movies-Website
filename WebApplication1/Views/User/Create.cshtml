@model WebApplication1.Models.Member

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center" style="margin:20px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Add New User</h2>

<h3 style="margin-left: 36%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">User</h3>
<hr />

<section style="display: flex; justify-content: center; margin: 2%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">User Name</label>
                <input asp-for="name" class="form-control" required/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" type="password" class="form-control" required/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" type="email" class="form-control" required/>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="role.RoleID" class="control-label">Role</label>
                <select asp-for="roleID" class="form-control" required>
                    @foreach (var item in ViewBag.roledata)
                    {
                        <option value="@item.RoleID">@item.RoleName</option>
                    }

                </select>
                <span asp-validation-for="role.RoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" style="background-color:mediumpurple" />
            </div>
            <div class="form-group font-weight-bold">
                <a asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
