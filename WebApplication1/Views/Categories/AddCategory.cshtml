@model WebApplication1.Models.MoviesCategories

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center" style="margin:20px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Add New Category</h2>

<h3 style="margin-left: 36%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Category</h3>
<hr />

<section style="display: flex; justify-content: center; margin: 2%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
    <div class="col-md-4">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="categoryName" class="control-label">Category Name</label>
                <input asp-for="categoryName" class="form-control" />
                <span asp-validation-for="categoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" style="background-color:mediumpurple" />
            </div>
        </form>
        <a asp-action="CategoriesHome">Back to List</a>
    </div>
</section>

